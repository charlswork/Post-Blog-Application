<script>
  document.addEventListener("DOMContentLoaded", function() {
    const hamburger = document.querySelector(".hamburger");
    const navLinks = document.querySelector(".nav-links");
  
    // Toggle the nav menu on hamburger click
    hamburger.addEventListener("click", function() {
      navLinks.classList.toggle("active");
    });
  
    const editForm = document.getElementById("editForm");
    if (editForm) {
      // Optionally, you can hide the form after saving or canceling
      editForm.onsubmit = function (event) {
        const indexInput = document.getElementById("postIndex").value;
        if (indexInput !== "") {
          const form = event.target;
          form.setAttribute("action", "/update/" + indexInput);
        }
      };
    }
  });
  
  function loadEditForm(postText, index) {
    // Show the edit form
    document.getElementById("editFormContainer").style.display = "block";
  
    // Load the post text into the textarea
    document.getElementById("editTextarea").value = postText;
    document.getElementById("postIndex").value = index;
  
    // Update form action for saving changes
    document
      .getElementById("editForm")
      .setAttribute("action", "/update/" + index);
  }
  </script>
  